<h1>ユーザ一覧ページ</h1>

<% if @user && @user.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<table>
  <thead>
    <tr>
      <th><%= t('views.name') %></th>
      <th><%= t('views.email') %></th>
      <th><%= t('views.admin') %></th>
      <th><%= t('views.task_count') %></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin ? "あり" : "なし" %></td>
        <td><%= user.tasks.count %></td>
        <td><%= link_to t('common.show'), admin_user_path(user.id), class: "show-user" %></td>
        <td><%= link_to t('common.edit'), edit_admin_user_path(user.id), class: "edit-user" %></td>
        <td><%= link_to t('common.destroy'), admin_user_path(user.id), method: :delete, data: { confirm: t('common.delete_confirm') }, class: "destroy-user" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
