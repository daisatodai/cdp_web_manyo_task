<%= form_with(model: task, local:true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %><br>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :deadline_on, "終了期限", style: "display: block" %>
    <%= form.date_field :deadline_on %>
  </div>

  <div>
    <%= form.label :priority, "優先度" %><br>
    <%= form.select :priority, Task.priorities_i18n.keys.map {|k| [Task.priorities_i18n[k], k]}, {prompt: ""} %>
  </div>

  <div>
    <%= form.label :status, "ステータス" %><br>
    <%= form.select :status, Task.statuses_i18n.keys.map {|k| [Task.statuses_i18n[k], k]}, {prompt: ""} %>
  </div>

  <div>
    <%= form.label :label, "ラベル" %><br>
    <% Label.all.each do |label| %>
      <%= form.check_box :label_ids, { multiple: true, include_hidden: false }, label[:id] %>
      <%= label.name %>
    <% end %>
  </div>

  <br>
  <div class="actions">
    <%= form.submit id: button_id, class: 'btn btn-primary' %>
  </div>
<% end %>
