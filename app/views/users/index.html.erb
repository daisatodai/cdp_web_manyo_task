<h1>ユーザ一覧ページ</h1>

<table>
  <thead>
    <tr>
      <th><%= t('views.name') %></th>
      <th><%= t('views.email') %></th>
      <th><%= t('views.admin') %></th>
      <th><%= t('views.task_count') %></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <td><%= user.task_count %></td>
        <td><%= link_to t('common.show'), admin_user_path(user), class: "show-user btn btn-primary" %></td>
        <td><%= link_to t('common.edit'), edit_admin_user_path(user), class: "edit-user btn btn-primary" %></td>
        <td><%= link_to t('common.destroy'), admin_users_path(user), method: :delete, data: { confirm: t('common.delete_confirm') }, class: "destroy-user btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

