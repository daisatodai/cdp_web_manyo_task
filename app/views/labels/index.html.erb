<h1>ラベル一覧ページ</h1>

<table>
  <thead>
    <tr>
      <th><%= t('views.name') %></th>
      <th><%= t('views.task_count') %></th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |Label| %>
      <tr>
        <td><%= label.name %></td>
        <td><%= label.task_count %></td>
        <td><%= link_to t('common.edit'), edit_label_path(label), class: "edit-label" %></td>
        <td><%= link_to t('common.destroy'), labels_path(label), method: :delete, data: { confirm: t('common.delete_confirm') }, class: "destroy-label" %></td>
      </tr>
    <% end %>
  </tbody>
</table>